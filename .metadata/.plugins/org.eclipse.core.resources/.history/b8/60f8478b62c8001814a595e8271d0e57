package java181005;

import java.util.*;

public class Ex02 {

	public static void main(String[] args) {
		// String[] team = new String[5];
		// team[0] = "김선민"; ...
		Scanner sc = new Scanner(System.in);
		String[] team = {"김선민", "김경민", "정승우", "이병진", "박종진"};
		
		System.out.println("==팀원 검색 프로그램==");
		System.out.print("검색할 팀원 입력 : ");
		String input = sc.nextLine();
		
		for(int i = 0; i < team.length; i++) {
			if (input.equals(team[i])) {
				System.out.println(input + "님은 " + (i + 1) + "번째 인덱스에 지정되어 있습니다.");
			} else {
				System.out.println("팀에 속하지 않은 인원입니다.");
			}
		}
		
		
		sc.close();
	}

}
