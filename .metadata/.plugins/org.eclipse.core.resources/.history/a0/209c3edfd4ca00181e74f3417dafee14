package java181008;

public class Ex08 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[][] array = new int[4][];
		
		for (int i = 0; i < array.length; i++) {
			array[i] = new int[i];
		}
		
		int num = 1;
		for (int i = 0; i < array.length; i++) {
			for (int j = 0; j <= array[i].length; j++) {
				array[i][j] = num++;
				System.out.print(array[i][j]);
			}
			System.out.println();
		}
	}

}
